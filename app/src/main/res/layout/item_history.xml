<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_custom_background"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="GAME 1 : 15th March 2:00 pm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name: Rahul Singh"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_game_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_best_cricketer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/who_is_the_best_cricketer_in_the_world"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <TextView
        android:id="@+id/text_best_cricketer_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Answer: Sachin Tendulkar"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_best_cricketer_question" />

    <TextView
        android:id="@+id/text_flag_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_are_the_colors_in_the_indian_national_flag"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_best_cricketer_answer" />

    <TextView
        android:id="@+id/text_flag_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Answers: Orange, white, Green"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_flag_question" />


</androidx.constraintlayout.widget.ConstraintLayout>